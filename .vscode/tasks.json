{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "MD to PDF",
            "type": "shell",
            "command": "pandoc -s -f markdown -t pdf --highlight-style tango  ${relativeFile} -o ${relativeFileDirname}/${fileBasenameNoExtension}.pdf",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "MD to PDF with table of contents",
            "type": "shell",
            "command": "pandoc -s --toc -f markdown -t pdf --highlight-style tango  ${relativeFile} -o ${relativeFileDirname}/${fileBasenameNoExtension}.pdf",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "GFM to PDF",
            "type": "shell",
            "command": "pandoc -s -f gfm -t pdf --highlight-style tango  ${relativeFile} -o ${relativeFileDirname}/${fileBasenameNoExtension}.pdf",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "GFM to HTML",
            "type": "shell",
            "command": "pandoc -s -f gfm -t html ${relativeFile} -o ${relativeFileDirname}/${fileBasenameNoExtension}.html",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        }
    ],
    "version": "2.0.0"
}